---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Downloads';
const description = 'Download C\'YaPass Apps';
const permalink = `${Astro.site.href}downloads`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="downloads">
  <div class="container">
    <h1>Downloads</h1>
    <h2>More to come soon...</h2>
    <p>More to come, but for now (as of 2025-06-23), here are links to my GitHub repos and some other details.</p>
    <p>
    <ul>
       <li>
       </li>
    </ul>
    </p>
</BaseLayout>

<style>
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
